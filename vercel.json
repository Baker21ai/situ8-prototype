{
  "buildCommand": "npm run build:safe",
  "outputDirectory": "dist",
  "devCommand": "npm run dev",
  "installCommand": "npm install --legacy-peer-deps",
  "framework": "vite",
  "env": {
    "VITE_ENVIRONMENT": "production",
    "NODE_ENV": "production",
    "CI": "true"
  },
  "build": {
    "env": {
      "NODE_ENV": "production",
      "CI": "true",
      "SKIP_TYPE_CHECK": "true"
    }
  },
  "functions": {
    "app/api/**/*.ts": {
      "runtime": "nodejs18.x"
    }
  },
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}