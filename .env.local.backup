REACT_APP_ENABLE_WEBSOCKETS=false
REACT_APP_ENABLE_FILE_UPLOADS=false
REACT_APP_ENABLE_REAL_TIME_UPDATES=false
REACT_APP_ENABLE_AUDIT_LOGGING=true